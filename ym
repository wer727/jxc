import React, { useState } from 'react';
import { Plus, Trash2, Package, Download, Upload } from 'lucide-react';

const InventorySystem = () => {
  const [activeTab, setActiveTab] = useState('stock');
  const [products, setProducts] = useState([
    { id: 1, name: 'å•†å“A', unit: 'ä»¶', initialStock: 100 },
    { id: 2, name: 'å•†å“B', unit: 'ä¸ª', initialStock: 50 },
    { id: 3, name: 'å•†å“C', unit: 'ç®±', initialStock: 30 }
  ]);
  const [purchases, setPurchases] = useState([
    { id: 1, productId: 1, quantity: 50, date: '2024-11-01', supplier: 'ä¾›åº”å•†A', remark: '' },
    { id: 2, productId: 2, quantity: 30, date: '2024-11-05', supplier: 'ä¾›åº”å•†B', remark: '' }
  ]);
  const [outbounds, setOutbounds] = useState([
    { id: 1, productId: 1, quantity: 40, date: '2024-11-10', purpose: 'é”€å”®', remark: '' },
    { id: 2, productId: 2, quantity: 20, date: '2024-11-12', purpose: 'é”€å”®', remark: '' }
  ]);

  // è®¡ç®—åº“å­˜
  const calculateInventory = () => {
    return products.map(product => {
      const totalPurchase = purchases
        .filter(p => p.productId === product.id)
        .reduce((sum, p) => sum + (parseFloat(p.quantity) || 0), 0);
      
      const totalOutbound = outbounds
        .filter(o => o.productId === product.id)
        .reduce((sum, o) => sum + (parseFloat(o.quantity) || 0), 0);
      
      const currentStock = product.initialStock + totalPurchase - totalOutbound;
      
      return {
        ...product,
        totalPurchase,
        totalOutbound,
        currentStock
      };
    });
  };

  const inventory = calculateInventory();

  // æ‰¹é‡æ·»åŠ è¿›è´§
  const addPurchaseRows = () => {
    const newRows = Array(10).fill(null).map((_, index) => ({
      id: Date.now() + index,
      productId: products[0]?.id || '',
      quantity: '',
      date: new Date().toISOString().split('T')[0],
      supplier: '',
      remark: '',
      isNew: true
    }));
    setPurchases([...purchases, ...newRows]);
  };

  // æ‰¹é‡æ·»åŠ å‡ºåº“
  const addOutboundRows = () => {
    const newRows = Array(10).fill(null).map((_, index) => ({
      id: Date.now() + index,
      productId: products[0]?.id || '',
      quantity: '',
      date: new Date().toISOString().split('T')[0],
      purpose: 'é”€å”®',
      remark: '',
      isNew: true
    }));
    setOutbounds([...outbounds, ...newRows]);
  };

  // æ›´æ–°è¿›è´§è®°å½•
  const updatePurchase = (id, field, value) => {
    setPurchases(purchases.map(p => 
      p.id === id ? { ...p, [field]: value, isNew: false } : p
    ));
  };

  // æ›´æ–°å‡ºåº“è®°å½•
  const updateOutbound = (id, field, value) => {
    setOutbounds(outbounds.map(o => 
      o.id === id ? { ...o, [field]: value, isNew: false } : o
    ));
  };

  // åˆ é™¤è¿›è´§è®°å½•
  const deletePurchase = (id) => {
    setPurchases(purchases.filter(p => p.id !== id));
  };

  // åˆ é™¤å‡ºåº“è®°å½•
  const deleteOutbound = (id) => {
    setOutbounds(outbounds.filter(o => o.id !== id));
  };

  // æ·»åŠ å•†å“
  const addProduct = () => {
    const newProduct = {
      id: Date.now(),
      name: 'æ–°å•†å“',
      unit: 'ä»¶',
      initialStock: 0,
      isNew: true
    };
    setProducts([...products, newProduct]);
  };

  // æ›´æ–°å•†å“
  const updateProduct = (id, field, value) => {
    setProducts(products.map(p => 
      p.id === id ? { ...p, [field]: value } : p
    ));
  };

  // åˆ é™¤å•†å“
  const deleteProduct = (id) => {
    setProducts(products.filter(p => p.id !== id));
  };

  // å¤„ç†è¡¨æ ¼ç²˜è´´ï¼ˆè¿›è´§ï¼‰
  const handlePurchasePaste = (e, rowId, cellField) => {
    e.preventDefault();
    const pastedData = e.clipboardData.getData('text');
    const rows = pastedData.split('\n').filter(row => row.trim());
    
    const currentIndex = purchases.findIndex(p => p.id === rowId);
    if (currentIndex === -1) return;

    const updatedPurchases = [...purchases];
    
    rows.forEach((row, rowIndex) => {
      const cells = row.split('\t');
      const targetIndex = currentIndex + rowIndex;
      
      if (targetIndex >= updatedPurchases.length) {
        // è‡ªåŠ¨æ·»åŠ æ–°è¡Œ
        updatedPurchases.push({
          id: Date.now() + rowIndex,
          productId: products[0]?.id || '',
          quantity: '',
          date: new Date().toISOString().split('T')[0],
          supplier: '',
          remark: ''
        });
      }

      const fields = ['date', 'productId', 'quantity', 'supplier', 'remark'];
      const startFieldIndex = fields.indexOf(cellField);
      
      cells.forEach((cell, cellIndex) => {
        const fieldIndex = startFieldIndex + cellIndex;
        if (fieldIndex < fields.length) {
          const field = fields[fieldIndex];
          if (field === 'productId') {
            const product = products.find(p => p.name === cell.trim());
            if (product) {
              updatedPurchases[targetIndex][field] = product.id;
            }
          } else if (field === 'quantity') {
            updatedPurchases[targetIndex][field] = parseFloat(cell) || '';
          } else {
            updatedPurchases[targetIndex][field] = cell.trim();
          }
        }
      });
    });

    setPurchases(updatedPurchases);
  };

  // å¤„ç†è¡¨æ ¼ç²˜è´´ï¼ˆå‡ºåº“ï¼‰
  const handleOutboundPaste = (e, rowId, cellField) => {
    e.preventDefault();
    const pastedData = e.clipboardData.getData('text');
    const rows = pastedData.split('\n').filter(row => row.trim());
    
    const currentIndex = outbounds.findIndex(o => o.id === rowId);
    if (currentIndex === -1) return;

    const updatedOutbounds = [...outbounds];
    
    rows.forEach((row, rowIndex) => {
      const cells = row.split('\t');
      const targetIndex = currentIndex + rowIndex;
      
      if (targetIndex >= updatedOutbounds.length) {
        updatedOutbounds.push({
          id: Date.now() + rowIndex,
          productId: products[0]?.id || '',
          quantity: '',
          date: new Date().toISOString().split('T')[0],
          purpose: 'é”€å”®',
          remark: ''
        });
      }

      const fields = ['date', 'productId', 'quantity', 'purpose', 'remark'];
      const startFieldIndex = fields.indexOf(cellField);
      
      cells.forEach((cell, cellIndex) => {
        const fieldIndex = startFieldIndex + cellIndex;
        if (fieldIndex < fields.length) {
          const field = fields[fieldIndex];
          if (field === 'productId') {
            const product = products.find(p => p.name === cell.trim());
            if (product) {
              updatedOutbounds[targetIndex][field] = product.id;
            }
          } else if (field === 'quantity') {
            updatedOutbounds[targetIndex][field] = parseFloat(cell) || '';
          } else {
            updatedOutbounds[targetIndex][field] = cell.trim();
          }
        }
      });
    });

    setOutbounds(updatedOutbounds);
  };

  return (
    <div className="min-h-screen bg-gray-50 p-6">
      <div className="max-w-7xl mx-auto">
        <h1 className="text-3xl font-bold text-gray-800 mb-6">è¿›é”€å­˜ç®¡ç†ç³»ç»Ÿ</h1>
        
        {/* ç»Ÿè®¡å¡ç‰‡ */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
          <div className="bg-white p-4 rounded-lg shadow">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm text-gray-600">æ€»è¿›è´§é‡</p>
                <p className="text-2xl font-bold text-blue-600">
                  {inventory.reduce((sum, item) => sum + item.totalPurchase, 0)}
                </p>
              </div>
              <Download className="text-blue-600" size={32} />
            </div>
          </div>
          
          <div className="bg-white p-4 rounded-lg shadow">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm text-gray-600">æ€»å‡ºåº“é‡</p>
                <p className="text-2xl font-bold text-red-600">
                  {inventory.reduce((sum, item) => sum + item.totalOutbound, 0)}
                </p>
              </div>
              <Upload className="text-red-600" size={32} />
            </div>
          </div>
          
          <div className="bg-white p-4 rounded-lg shadow">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm text-gray-600">å½“å‰åº“å­˜</p>
                <p className="text-2xl font-bold text-green-600">
                  {inventory.reduce((sum, item) => sum + item.currentStock, 0)}
                </p>
              </div>
              <Package className="text-green-600" size={32} />
            </div>
          </div>
        </div>

        {/* æ ‡ç­¾é¡µ */}
        <div className="bg-white rounded-lg shadow mb-6">
          <div className="flex border-b">
            <button
              onClick={() => setActiveTab('stock')}
              className={`px-6 py-3 font-medium ${activeTab === 'stock' ? 'border-b-2 border-blue-600 text-blue-600' : 'text-gray-600'}`}
            >
              åº“å­˜æ±‡æ€»
            </button>
            <button
              onClick={() => setActiveTab('products')}
              className={`px-6 py-3 font-medium ${activeTab === 'products' ? 'border-b-2 border-blue-600 text-blue-600' : 'text-gray-600'}`}
            >
              å•†å“è®¾ç½®
            </button>
            <button
              onClick={() => setActiveTab('purchases')}
              className={`px-6 py-3 font-medium ${activeTab === 'purchases' ? 'border-b-2 border-blue-600 text-blue-600' : 'text-gray-600'}`}
            >
              è¿›è´§è®°å½•
            </button>
            <button
              onClick={() => setActiveTab('outbounds')}
              className={`px-6 py-3 font-medium ${activeTab === 'outbounds' ? 'border-b-2 border-blue-600 text-blue-600' : 'text-gray-600'}`}
            >
              å‡ºåº“è®°å½•
            </button>
          </div>

          <div className="p-6">
            {/* åº“å­˜æ±‡æ€» */}
            {activeTab === 'stock' && (
              <div className="overflow-x-auto">
                <table className="w-full border-collapse">
                  <thead>
                    <tr className="bg-gray-100">
                      <th className="border px-4 py-2 text-left">å•†å“åç§°</th>
                      <th className="border px-4 py-2 text-center">å•ä½</th>
                      <th className="border px-4 py-2 text-right">æœŸåˆåº“å­˜</th>
                      <th className="border px-4 py-2 text-right bg-blue-50">ç´¯è®¡è¿›è´§</th>
                      <th className="border px-4 py-2 text-right bg-red-50">ç´¯è®¡å‡ºåº“</th>
                      <th className="border px-4 py-2 text-right bg-green-50 font-bold">å½“å‰åº“å­˜</th>
                    </tr>
                  </thead>
                  <tbody>
                    {inventory.map(item => (
                      <tr key={item.id} className="hover:bg-gray-50">
                        <td className="border px-4 py-3">{item.name}</td>
                        <td className="border px-4 py-3 text-center">{item.unit}</td>
                        <td className="border px-4 py-3 text-right">{item.initialStock}</td>
                        <td className="border px-4 py-3 text-right text-blue-600 font-medium">+{item.totalPurchase}</td>
                        <td className="border px-4 py-3 text-right text-red-600 font-medium">-{item.totalOutbound}</td>
                        <td className="border px-4 py-3 text-right font-bold text-green-600 text-lg">{item.currentStock}</td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            )}

            {/* å•†å“è®¾ç½® */}
            {activeTab === 'products' && (
              <div>
                <button
                  onClick={addProduct}
                  className="mb-4 flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
                >
                  <Plus size={20} /> æ·»åŠ å•†å“
                </button>
                <div className="overflow-x-auto">
                  <table className="w-full border-collapse">
                    <thead>
                      <tr className="bg-gray-100">
                        <th className="border px-4 py-2 text-left">å•†å“åç§°</th>
                        <th className="border px-4 py-2 text-center">å•ä½</th>
                        <th className="border px-4 py-2 text-right">æœŸåˆåº“å­˜</th>
                        <th className="border px-4 py-2 text-center">æ“ä½œ</th>
                      </tr>
                    </thead>
                    <tbody>
                      {products.map(product => (
                        <tr key={product.id} className="hover:bg-gray-50">
                          <td className="border px-4 py-3">
                            <input
                              type="text"
                              value={product.name}
                              onChange={(e) => updateProduct(product.id, 'name', e.target.value)}
                              className="w-full px-2 py-1 border rounded"
                            />
                          </td>
                          <td className="border px-4 py-3">
                            <input
                              type="text"
                              value={product.unit}
                              onChange={(e) => updateProduct(product.id, 'unit', e.target.value)}
                              className="w-full px-2 py-1 border rounded text-center"
                            />
                          </td>
                          <td className="border px-4 py-3">
                            <input
                              type="number"
                              value={product.initialStock}
                              onChange={(e) => updateProduct(product.id, 'initialStock', parseFloat(e.target.value) || 0)}
                              className="w-full px-2 py-1 border rounded text-right"
                            />
                          </td>
                          <td className="border px-4 py-3 text-center">
                            <button
                              onClick={() => deleteProduct(product.id)}
                              className="text-red-600 hover:text-red-800"
                            >
                              <Trash2 size={18} />
                            </button>
                          </td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              </div>
            )}

            {/* è¿›è´§è®°å½• */}
            {activeTab === 'purchases' && (
              <div>
                <div className="mb-4 flex items-center gap-4">
                  <button
                    onClick={addPurchaseRows}
                    className="flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
                  >
                    <Plus size={20} /> æ·»åŠ 10è¡Œ
                  </button>
                  <span className="text-sm text-gray-600">ğŸ’¡ æç¤ºï¼šå¯ä»¥ä»Excelå¤åˆ¶ç²˜è´´å¤šè¡Œæ•°æ®</span>
                </div>
                <div className="overflow-x-auto">
                  <table className="w-full border-collapse">
                    <thead>
                      <tr className="bg-gray-100">
                        <th className="border px-4 py-2 text-left">æ—¥æœŸ</th>
                        <th className="border px-4 py-2 text-left">å•†å“åç§°</th>
                        <th className="border px-4 py-2 text-right">æ•°é‡</th>
                        <th className="border px-4 py-2 text-left">ä¾›åº”å•†</th>
                        <th className="border px-4 py-2 text-left">å¤‡æ³¨</th>
                        <th className="border px-4 py-2 text-center">æ“ä½œ</th>
                      </tr>
                    </thead>
                    <tbody>
                      {purchases.map(purchase => {
                        const product = products.find(p => p.id === purchase.productId);
                        return (
                          <tr key={purchase.id} className={`hover:bg-gray-50 ${purchase.isNew ? 'bg-blue-50' : ''}`}>
                            <td className="border px-2 py-2">
                              <input
                                type="date"
                                value={purchase.date}
                                onChange={(e) => updatePurchase(purchase.id, 'date', e.target.value)}
                                onPaste={(e) => handlePurchasePaste(e, purchase.id, 'date')}
                                className="w-full px-2 py-1 border rounded"
                              />
                            </td>
                            <td className="border px-2 py-2">
                              <select
                                value={purchase.productId}
                                onChange={(e) => updatePurchase(purchase.id, 'productId', parseInt(e.target.value))}
                                onPaste={(e) => handlePurchasePaste(e, purchase.id, 'productId')}
                                className="w-full px-2 py-1 border rounded"
                              >
                                {products.map(p => (
                                  <option key={p.id} value={p.id}>{p.name}</option>
                                ))}
                              </select>
                            </td>
                            <td className="border px-2 py-2">
                              <input
                                type="number"
                                value={purchase.quantity}
                                onChange={(e) => updatePurchase(purchase.id, 'quantity', parseFloat(e.target.value) || '')}
                                onPaste={(e) => handlePurchasePaste(e, purchase.id, 'quantity')}
                                className="w-full px-2 py-1 border rounded text-right"
                                placeholder="0"
                              />
                            </td>
                            <td className="border px-2 py-2">
                              <input
                                type="text"
                                value={purchase.supplier}
                                onChange={(e) => updatePurchase(purchase.id, 'supplier', e.target.value)}
                                onPaste={(e) => handlePurchasePaste(e, purchase.id, 'supplier')}
                                className="w-full px-2 py-1 border rounded"
                                placeholder="ä¾›åº”å•†"
                              />
                            </td>
                            <td className="border px-2 py-2">
                              <input
                                type="text"
                                value={purchase.remark}
                                onChange={(e) => updatePurchase(purchase.id, 'remark', e.target.value)}
                                onPaste={(e) => handlePurchasePaste(e, purchase.id, 'remark')}
                                className="w-full px-2 py-1 border rounded"
                                placeholder="å¤‡æ³¨"
                              />
                            </td>
                            <td className="border px-2 py-2 text-center">
                              <button
                                onClick={() => deletePurchase(purchase.id)}
                                className="text-red-600 hover:text-red-800"
                              >
                                <Trash2 size={18} />
                              </button>
                            </td>
                          </tr>
                        );
                      })}
                    </tbody>
                  </table>
                </div>
              </div>
            )}

            {/* å‡ºåº“è®°å½• */}
            {activeTab === 'outbounds' && (
              <div>
                <div className="mb-4 flex items-center gap-4">
                  <button
                    onClick={addOutboundRows}
                    className="flex items-center gap-2 bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700"
                  >
                    <Plus size={20} /> æ·»åŠ 10è¡Œ
                  </button>
                  <span className="text-sm text-gray-600">ğŸ’¡ æç¤ºï¼šå¯ä»¥ä»Excelå¤åˆ¶ç²˜è´´å¤šè¡Œæ•°æ®</span>
                </div>
                <div className="overflow-x-auto">
                  <table className="w-full border-collapse">
                    <thead>
                      <tr className="bg-gray-100">
                        <th className="border px-4 py-2 text-left">æ—¥æœŸ</th>
                        <th className="border px-4 py-2 text-left">å•†å“åç§°</th>
                        <th className="border px-4 py-2 text-right">æ•°é‡</th>
                        <th className="border px-4 py-2 text-left">ç”¨é€”</th>
                        <th className="border px-4 py-2 text-left">å¤‡æ³¨</th>
                        <th className="border px-4 py-2 text-center">æ“ä½œ</th>
                      </tr>
                    </thead>
                    <tbody>
                      {outbounds.map(outbound => {
                        const product = products.find(p => p.id === outbound.productId);
                        return (
                          <tr key={outbound.id} className={`hover:bg-gray-50 ${outbound.isNew ? 'bg-red-50' : ''}`}>
                            <td className="border px-2 py-2">
                              <input
                                type="date"
                                value={outbound.date}
                                onChange={(e) => updateOutbound(outbound.id, 'date', e.target.value)}
                                onPaste={(e) => handleOutboundPaste(e, outbound.id, 'date')}
                                className="w-full px-2 py-1 border rounded"
                              />
                            </td>
                            <td className="border px-2 py-2">
                              <select
                                value={outbound.productId}
                                onChange={(e) => updateOutbound(outbound.id, 'productId', parseInt(e.target.value))}
                                onPaste={(e) => handleOutboundPaste(e, outbound.id, 'productId')}
                                className="w-full px-2 py-1 border rounded"
                              >
                                {products.map(p => (
                                  <option key={p.id} value={p.id}>{p.name}</option>
                                ))}
                              </select>
                            </td>
                            <td className="border px-2 py-2">
                              <input
                                type="number"
                                value={outbound.quantity}
                                onChange={(e) => updateOutbound(outbound.id, 'quantity', parseFloat(e.target.value) || '')}
                                onPaste={(e) => handleOutboundPaste(e, outbound.id, 'quantity')}
                                className="w-full px-2 py-1 border rounded text-right"
                                placeholder="0"
                              />
                            </td>
                            <td className="border px-2 py-2">
                              <input
                                type="text"
                                value={outbound.purpose}
                                onChange={(e) => updateOutbound(outbound.id, 'purpose', e.target.value)}
                                onPaste={(e) => handleOutboundPaste(e, outbound.id, 'purpose')}
                                className="w-full px-2 py-1 border rounded"
                                placeholder="é”€å”®/ç”Ÿäº§/å…¶ä»–"
                              />
                            </td>
                            <td className="border px-2 py-2">
                              <input
                                type="text"
                                value={outbound.remark}
                                onChange={(e) => updateOutbound(outbound.id, 'remark', e.target.value)}
                                onPaste={(e) => handleOutboundPaste(e, outbound.id, 'remark')}
                                className="w-full px-2 py-1 border rounded"
                                placeholder="å¤‡æ³¨"
                              />
                            </td>
                            <td className="border px-2 py-2 text-center">
                              <button
                                onClick={() => deleteOutbound(outbound.id)}
                                className="text-red-600 hover:text-red-800"
                              >
                                <Trash2 size={18} />
                              </button>
                            </td>
                          </tr>
                        );
                      })}
                    </tbody>
                  </table>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  );
};

export default InventorySystem;
